{
	"name": "ghul",
	"displayName": "ghūl",
	"description": "ghūl language support",
	"version": "0.6.19-alpha.10",
	"publisher": "degory",
	"license": "GPL-3.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/degory/ghul-vsce"
	},
	"icon": "images/ghul-logo-icon.png",
	"engines": {
		"vscode": "^1.18.0"
	},
	"categories": [
		"Programming Languages",
		"Snippets"
	],
	"activationEvents": [
		"workspaceContains:**/*.ghul"
	],
	"main": "./client/out/extension",
	"contributes": {
		"languages": [
			{
				"id": "ghul",
				"aliases": [
					"ghul",
					"ghūl"
				],
				"extensions": [
					".ghul"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "ghul",
				"scopeName": "source.ghul",
				"path": "./syntaxes/ghul.tmLanguage.json"
			}
		],
		"snippets": [
			{
				"language": "ghul",
				"path": "./snippets/ghul.json"
			}
		],
		"problemMatchers": [
			{
				"name": "ghūl",
				"owner": "ghul",
				"fileLocation": [
					"absolute"
				],
				"pattern": [
					{
						"regexp": "^/(.*):\\s+(\\d+),(\\d+)\\.\\.(\\d+),(\\d+):\\s+(info|warn|error):\\s+(.*)$",
						"file": 1,
						"line": 2,
						"column": 3,
						"endLine": 4,
						"endColumn": 5,
						"severity": 6,
						"message": 7
					}
				]
			},
			{
				"name": "ghūl",
				"owner": "ghul",
				"fileLocation": [
					"relative",
					"${workspaceRoot}"
				],
				"pattern": [
					{
						"regexp": "^(.*):\\s+(\\d+),(\\d+)\\.\\.(\\d+),(\\d+):\\s+(info|warn|error):\\s+(.*)$",
						"file": 1,
						"line": 2,
						"column": 3,
						"endLine": 4,
						"endColumn": 5,
						"severity": 6,
						"message": 7
					}
				]
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run webpack",
		"webpack": "npm run genversion && npm run clean && webpack --mode production --config ./client/webpack.config.js && webpack --mode production --config ./server/webpack.config.js",
		"webpack:dev": "npm run genversion && npm run clean && webpack --mode none --config ./client/webpack.config.js && webpack --mode none --config ./server/webpack.config.js",
		"compile": "tsc -b",
		"compile:client": "tsc -b ./client/tsconfig.json",
		"compile:server": "tsc -b ./server/tsconfig.json",
		"genversion": "genversion ./client/src/version.js && genversion ./server/src/version.js",
		"watch": "tsc -b -w",
		"clean": "rimraf client/out && rimraf server/out",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "npm run genversion && npm run test:client && npm run test:server",
		"test:client": "cd client && npm test",
		"test:server": "cd server && npm test"
	},
	"devDependencies": {
		"@types/mocha": "^2.2.42",
		"@types/node": "^6.14.10",
		"genversion": "^2.2.1",
		"merge-options": "^3.0.3",
		"rimraf": "^3.0.2",
		"typescript": "^3.9.5",
		"webpack": "^5.76.0",
		"webpack-cli": "^4.2.0"
	},
	"dependencies": {
		"throttle-debounce": "^3.0.1"
	}
}
