{
  "name": "ghul",
  "displayName": "ghūl",
  "description": "ghūl language support",
  "version": "0.2.14",
  "publisher": "degory",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/degory/ghul-vsce"
  },
  "engines": {
    "vscode": "^1.18.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "activationEvents": [
    "workspaceContains:**/*.ghul"
  ],
  "main": "./dist/extension",
  "contributes": {
    "languages": [
      {
        "id": "ghul",
        "aliases": [
          "ghul",
          "ghūl"
        ],
        "extensions": [
          ".ghul"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "ghul",
        "scopeName": "source.ghul",
        "path": "./syntaxes/ghul.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "ghul",
        "path": "./snippets/ghul.json"
      }
    ],
    "problemMatchers": [
      {
        "name": "ghūl",
        "owner": "ghul",
        "fileLocation": [
          "absolute"
        ],
        "pattern": [
          {
            "regexp": "^/(.*):\\s+(\\d+),(\\d+)\\.\\.(\\d+),(\\d+):\\s+(info|warn|error):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "endLine": 4,
            "endColumn": 5,
            "severity": 6,
            "message": 7
          }
        ]
      },
      {
        "name": "ghūl",
        "owner": "ghul",
        "fileLocation": [
          "relative",
          "${workspaceRoot}"
        ],
        "pattern": [
          {
            "regexp": "^(.*):\\s+(\\d+),(\\d+)\\.\\.(\\d+),(\\d+):\\s+(info|warn|error):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "endLine": 4,
            "endColumn": 5,
            "severity": 6,
            "message": 7
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "webpack --mode production",
    "webpack": "webpack --mode development",
    "webpack-dev": "webpack --mode development --watch",
    "test-compile": "tsc -p ./",
    "compile": "tsc -p ./",
    "watch": "tsc -w -p ./"
  },
  "dependencies": {
    "@types/vscode": "^1.45.1",
    "vscode-languageclient": "^6.1.3"
  },
  "devDependencies": {
    "@types/node": "^14.0.11",
    "ts-loader": "^8.0.11",
    "typescript": "^4.0.5",
    "webpack": "^5.5.1",
    "webpack-cli": "^4.2.0"
  }
}
