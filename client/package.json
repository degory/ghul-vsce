{
  "name": "ghul",
  "displayName": "ghūl",
  "description": "ghūl language support",
  "version": "0.0.27",
  "publisher": "degory",
  "repository": {
    "type": "git",
    "url": "https://github.com/degory/ghul-vsce"
  },
  "engines": {
    "vscode": "^1.18.0"
  },
  "categories": [
    "Languages",
    "Snippets"
  ],
  "activationEvents": [
    "onLanguage:ghul"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "languages": [
      {
        "id": "ghul",
        "aliases": [
          "ghul",
          "ghūl"
        ],
        "extensions": [
          ".ghul"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "ghul",
        "scopeName": "source.ghul",
        "path": "./syntaxes/ghul.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "ghul",
        "path": "./snippets/ghul.json"
      }
    ],
    "problemMatchers": [
      {
        "name": "ghul",
        "owner": "ghul",
        "fileLocation": [
          "relative",
          "${workspaceRoot}"
        ],
        "pattern": [
          {
            "regexp": "^(.*):\\s+(\\d+),(\\d+)\\.\\.(\\d+),(\\d+):\\s+(info|warn|error):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "endLine": 4,
            "endColumn": 5,
            "severity": 6,
            "message": 7
          }
        ]
      }      
    ],
    "configuration": {
      "type": "object",
      "title": "Example configuration",
      "properties": {
        "lspSample.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "lspSample.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VSCode and the language server."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -p ./",
    "watch": "tsc -w -p ./",
    "update-vscode": "node ./node_modules/vscode/bin/install",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "dependencies": {
    "vscode": "^1.1.10",
    "vscode-languageclient": "^4.0.0-next.1"
  }
}
